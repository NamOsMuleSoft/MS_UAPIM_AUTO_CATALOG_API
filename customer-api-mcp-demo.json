{
  "openapi": "3.0.0",
  "info": {
    "title": "Customer API MCP Demo",
    "description": "This API provides functionality to manage customer data. It allows for retrieving customer information and creating new customers.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/customers": {
      "get": {
        "summary": "Get All Customers",
        "description": "Retrieves a list of all customers in the system.",
        "tags": ["Customers"],
        "responses": {
          "200": {
            "description": "A successful response returning a list of customers.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Customer"
                  }
                },
                "examples": {
                  "success": {
                    "value": [
                      {
                        "id": "1",
                        "firstName": "John",
                        "lastName": "Doe",
                        "email": "john.doe@example.com",
                        "createdAt": "2024-05-21T10:00:00Z"
                      },
                      {
                        "id": "2",
                        "firstName": "Jane",
                        "lastName": "Smith",
                        "email": "jane.smith@example.com",
                        "createdAt": "2024-05-21T10:05:00Z"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a Customer",
        "description": "Creates a new customer record. The request body must contain the customer's information. A unique `id` and `createdAt` timestamp will be generated by the server.",
        "tags": ["Customers"],
        "requestBody": {
          "description": "Customer object that needs to be added to the store",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewCustomer"
              },
              "examples": {
                "new_customer": {
                  "value": {
                    "firstName": "Peter",
                    "lastName": "Jones",
                    "email": "peter.jones@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Customer created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "examples": {
                  "success": {
                    "value": {
                      "id": "3",
                      "firstName": "Peter",
                      "lastName": "Jones",
                      "email": "peter.jones@example.com",
                      "createdAt": "2024-05-21T11:30:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. For example, if the email already exists or required fields are missing.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "email_exists": {
                    "value": {
                      "error": "Email already exists."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "summary": "Get Customer by ID",
        "description": "Retrieves a single customer by their unique identifier.",
        "tags": ["Customers"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the customer.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with the customer data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "examples": {
                  "success": {
                    "value": {
                      "id": "1",
                      "firstName": "John",
                      "lastName": "Doe",
                      "email": "john.doe@example.com",
                      "createdAt": "2024-05-21T10:00:00Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Customer not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "not_found": {
                    "value": {
                      "error": "Customer not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the customer.",
            "example": "1"
          },
          "firstName": {
            "type": "string",
            "description": "First name of the customer.",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "description": "Last name of the customer.",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address of the customer.",
            "example": "john.doe@example.com"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time the customer was created.",
            "example": "2024-05-21T10:00:00Z"
          }
        }
      },
      "NewCustomer": {
        "type": "object",
        "required": ["firstName", "lastName", "email"],
        "properties": {
          "firstName": {
            "type": "string",
            "description": "First name of the customer.",
            "example": "Peter"
          },
          "lastName": {
            "type": "string",
            "description": "Last name of the customer.",
            "example": "Jones"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address of the customer. Must be unique.",
            "example": "peter.jones@example.com"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "A message describing the error."
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Customers",
      "description": "Operations about customers"
    }
  ]
}
